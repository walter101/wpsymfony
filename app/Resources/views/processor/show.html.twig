{% extends 'basemanager.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Processor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ processor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ processor.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ processor.price }}</td>
            </tr>
            <tr>
                <th>Processor_speed</th>
                <td>{{ processor.processorspeed }}</td>
            </tr>
            <tr>
                <th>Processor_type</th>
                <td>{{ processor.processortype }}</td>
            </tr>
            <tr>
                <th>Cores</th>
                <td>{{ processor.cores }}</td>
            </tr>
            <tr>
                <th>Socket</th>
                <td>{{ processor.socket }}</td>
            </tr>
            <tr>
                <th>Poweruse</th>
                <td>{{ processor.poweruse }}</td>
            </tr>
            <tr>
                <th valign="top">Image</th>
                <td>
                    {{ processor.image }}
                    <img src="{{ asset( 'uploads/images/'~ processor.image) }}" alt="{{ processor.name }}"/>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('processor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('processor_edit', { 'id': processor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{%  block menu %}
    {{  include('includes/menu.html.twig') }}
{%  endblock %}