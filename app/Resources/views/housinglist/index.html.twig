{% extends 'basemanager.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Housinglists list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>Shape</th>
                <th>Lenght</th>
                <th>Height</th>
                <th>Width</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for housingList in housingLists %}
            <tr>
                <td><a href="{{ path('housinglist_show', { 'id': housingList.id }) }}">{{ housingList.id }}</a></td>
                <td>{{ housingList.name }}</td>
                <td>{{ housingList.color }}</td>
                <td>{{ housingList.shape }}</td>
                <td>{{ housingList.lenght }}</td>
                <td>{{ housingList.height }}</td>
                <td>{{ housingList.width }}</td>
                <td>{{ housingList.image }}</td>
                <td>
                    <a href="{{ path('housinglist_show', { 'id': housingList.id }) }}"> <i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('housinglist_edit', { 'id': housingList.id }) }}"> <i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('housinglist_new') }}"><i class="far fa-plus-square"></i> Create a new housingList</a>
{% endblock %}

{%  block menu %}
    {{  include('includes/menu.html.twig') }}
{%  endblock %}