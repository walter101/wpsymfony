{% extends 'basemanager.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Graphiccards list</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Slots</th>
                <th scope="col">Memory</th>
                <th scope="col">Memorytype</th>
                <th scope="col">Memoryinterfact</th>
                <th scope="col">Memoryspeed</th>
                <th scope="col">Clockspeed</th>
                <th scope="col">Dvi</th>
                <th scope="col">Hdmi</th>
                <th scope="col">Poweruse</th>
                <th scope="col">Image</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for graphicCard in graphicCards %}
            <tr>
                <td><a href="{{ path('graphiccard_show', { 'id': graphicCard.id }) }}">{{ graphicCard.id }}</a></td>
                <td>{{ graphicCard.name }}</td>
                <td>{{ graphicCard.slots }}</td>
                <td>{{ graphicCard.memory }}</td>
                <td>{{ graphicCard.memoryType }}</td>
                <td>{{ graphicCard.memoryInterfact }}</td>
                <td>{{ graphicCard.memorySpeed }}</td>
                <td>{{ graphicCard.clockSpeed }}</td>
                <td>{{ graphicCard.dvi }}</td>
                <td>{{ graphicCard.hdmi }}</td>
                <td>{{ graphicCard.powerUse }}</td>
                <td>{{ graphicCard.image }}</td>
                <td>{{ graphicCard.status }}</td>
                <td>
                    <a href="{{ path('graphiccard_show', { 'id': graphicCard.id }) }}"> <i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('graphiccard_edit', { 'id': graphicCard.id }) }}"> <i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('graphiccard_new') }}"><i class="far fa-plus-square"></i> Create a new graphicCard</a>
{% endblock %}

{%  block menu %}
    {{  include('includes/menu.html.twig') }}
{%  endblock %}