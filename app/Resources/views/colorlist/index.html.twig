{% extends 'basemanager.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Colorlists list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Colorname</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for colorList in colorLists %}
            <tr>
                <td><a href="{{ path('colorlist_show', { 'id': colorList.id }) }}">{{ colorList.id }}</a></td>
                <td>{{ colorList.colorName }}</td>
                <td>{{ colorList.image }}</td>
                <td>
                    <a href="{{ path('colorlist_show', { 'id': colorList.id }) }}"> <i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('colorlist_edit', { 'id': colorList.id }) }}"> <i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('colorlist_new') }}"><i class="far fa-plus-square"></i> Create a new colorList</a>
{% endblock %}

{%  block menu %}
    {{  include('includes/menu.html.twig') }}
{%  endblock %}