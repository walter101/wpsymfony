{% extends 'basemanager.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Computers list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Graphiccard</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for computer in computers %}
            <tr>
                <td><a href="{{ path('computer_show', { 'id': computer.id }) }}">{{ computer.id }}</a></td>
                <td>{{ computer.name }}</td>
                <td>{{ computer.graphicCard }}</td>
                <td>
                    <a href="{{ path('computer_show', { 'id': computer.id }) }}"> <i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('computer_edit', { 'id': computer.id }) }}"> <i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('computer_new') }}"><i class="far fa-plus-square"></i> Create a new computer</a>
{% endblock %}

{%  block menu %}
    {{  include('includes/menu.html.twig') }}
{%  endblock %}